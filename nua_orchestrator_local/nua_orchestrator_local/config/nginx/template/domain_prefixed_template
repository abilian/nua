server {
    server_name {{hostname}};

    {% for site in sites -%}
	location /{{site.prefix}} {
		rewrite /{{site.prefix}}(/.*|$) /$1  break;
        proxy_pass         http://localhost:{{site.actual_port}};
        proxy_redirect     off;
        proxy_set_header   Host $host;
	}
    {%- endfor %}
}
